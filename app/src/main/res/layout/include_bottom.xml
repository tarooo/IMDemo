<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d9d9d9"/>
    <LinearLayout
        android:id="@+id/ll_bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3f3f3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <ImageView
            android:id="@+id/img_voice"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/icon_chat_voice"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/edt_msg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_edit_white"
            android:maxLines="3"
            android:minHeight="36dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_press"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#1b1b1b"
            android:textSize="17sp"
            android:text="按住说话"
            android:gravity="center"
            android:background="@drawable/corners_edit"
            android:minHeight="36dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/icon_chat_expression"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/img_add"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/icon_chat_add"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_send"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="发送"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:visibility="gone"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d9d9d9"/>
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f3f3f3"
        android:visibility="gone">
        <com.taro.imdemo.view.NoScrollViewPager
            android:id="@+id/vp_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>